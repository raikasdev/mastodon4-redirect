{
  "manifest_version": 3,
  "name": "Mastodon4 Redirect",
  "version": "1.1",
  "description": "Redirects users from Mastodon4 supported instances to their home instance",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "author": "raikasdev",
  "action": {},
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/m4redirect.js"]
    }
  ],
  "options_ui": {
    "page": "src/options.html"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}